<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#812815"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-39dp"
        android:focusableInTouchMode="true"
        android:clickable="true"
        android:focusable="true">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="480dp"
            app:srcCompat="@drawable/logoguro" />

        <Button
            android:id="@+id/btnDelete_editdata"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/et_dateofpurchase_editdata"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="31dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button"
            android:text="Delete" />

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_below="@+id/et_dateofpurchase_editdata"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="130dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="131dp"
            android:layout_marginRight="131dp"
            android:textColor="#FFFFFF"
            android:background="@drawable/custom_button"
            android:text="Update" />

        <EditText
            android:id="@+id/et_itemprice_editdata"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spn_pick_editdata"
            android:layout_alignStart="@+id/spn_pick_editdata"
            android:layout_alignLeft="@+id/spn_pick_editdata"
            android:layout_marginTop="20dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFF" />

        <Spinner
            android:id="@+id/spn_pick_editdata"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_itemname_editdata"
            android:layout_alignStart="@+id/et_itemname_editdata"
            android:layout_alignLeft="@+id/et_itemname_editdata"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:textColor="@android:color/white" />

        <EditText
            android:id="@+id/et_itemname_editdata"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:backgroundTint="@android:color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFF"
            />

        <TextView
            android:id="@+id/et_dateofpurchase_editdata"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_itemprice_editdata"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="Date of Purchase"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFF"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/imgbtn_backhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_arrow_back_black_24dp"
            />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>